				{
					"listen": "test",
					"script": {
						"exec": [
							"const options = {\r",
							"url: 'http://izicap:8080/tokens',\r",
							"method: 'POST',\r",
							"header: {\"Content-Type\": \"application/json\"},\r",
							"body: { \r",
							"    mode: 'raw',\r",
							"    raw:JSON.stringify({\r",
							"        'username': 'admin',\r",
							"        'password': 'admin'\r",
							"        })\r",
							"    }\r",
							"}; \r",
							"\r",
							"pm.sendRequest(options, (error, response) => {\r",
							"  pm.test('Response should be okay to process', () => {\r",
							"    pm.expect(response).to.have.property('code', 201);\r",
							"    pm.expect(response).to.have.property('status', 'Created');\r",
							"  });\r",
							"});\r",
							""
						],
						"type": "text/javascript"
					}
				}
